
[{{ range $index, $page := .Site.Pages }}
  {{ $html_h := findRE "</h2>(.|\n)*?<h2" $page.Content}},
  {{ if }}
  {
    "objectID": "{{ .UniqueID }}",
    "url": "{{ $page.Permalink }}",
    "title": "{{ htmlEscape $page.Title}}",
    "content": {{ $page.Summary | jsonify }},
    "hierarchy": { 
      "lvl0": "{{ htmlEscape $page.Title}}",
      "lvl1": "",
      "lvl2": "",
      "lvl3": "",
      "lvl4": "",
      "lvl5": "",
      "lvl6": ""
    }
  }
  {{- if ne $page.Type "json" -}}
    {{- if and $index (gt $index 0) -}},
    {{- end }}
  {{- end -}}
{{- end -}}]