
[{{- range $index, $page := .Site.Pages -}}
  {{- if ne $page.Type "json" -}}
    {{ $page_content :=  $page.Content }}
    {{ replaceRE "(<h)(.|\n)*?</h" "<end>$1" $page_content }}
    {{- range $index, $html :=  findRE "<h(.|\n)*?<end>" $page_content -}}  
      {{- $html_id := findRE "id=(.|\n)*?>" . -}} 
      {{ $html_id_f := delimit $html_id "" ""}}
      {{ $html_id_f := substr $html_id_f 4 -2 }}
      {{ $content := . | plainify }}
      {      
        "objectID": "{{ md5 . }}",
        "url": "{{ $page.Permalink }}#{{ $html_id_f }}",
        "title": "{{ htmlEscape $page.Title}}",
        "content": {{ $content | jsonify }},
        "hierarchy": { 
          "lvl0": "{{ htmlEscape $page.Parent.Title }}",
          "lvl1": "{{ htmlEscape $page.Title}}",
          "lvl2": {{ $content | jsonify }},
          "lvl3": "",
          "lvl4": "",
          "lvl5": "",
          "lvl6": ""
        }
      },    
    {{- end -}}
  {{- end -}}
{{- end -}}
  {
    "objectID": "{{ md5 "null" }}",
    "url": "",
    "title": "null",
    "content": "null",
    "hierarchy": { 
      "lvl0": "null",
      "lvl1": "",
      "lvl2": "",
      "lvl3": "",
      "lvl4": "",
      "lvl5": "",
      "lvl6": ""
    }
  }
]


