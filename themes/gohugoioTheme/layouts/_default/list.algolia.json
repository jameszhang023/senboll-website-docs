
[{{- range $index, $page := .Site.Pages -}}
  {{- if ne $page.Type "json" -}}
    {{ if and $index (gt $index 0) }}
      {{- range $index, $html_h2 :=  findRE "<h2 (.|\n)*?</h2>" $page.Content -}}
        {{ if and $index (gt $index 0) }}
          {      
            "objectID": "{{ md5 . }}",
            "url": "{{ $page.Permalink }}",
            "title": "{{ htmlEscape $page.Title}}",
            "content": "{{ . | plainify }}",
            "hierarchy": { 
              "lvl0": "{{ htmlEscape $page.Title}}",
              "lvl1": "{{ . | plainify }}",
              "lvl2": "",
              "lvl3": "",
              "lvl4": "",
              "lvl5": "",
              "lvl6": ""
            }
          },
        {{- end -}}      
      {{- end -}}
    {{- end -}}    
  {{- end -}}
{{- end -}}
{
  "objectID": "{{ .UnicodeID }}",
  "url": "",
  "title": "",
  "content": "",
  "hierarchy": { 
    "lvl0": "",
    "lvl1": "",
    "lvl2": "",
    "lvl3": "",
    "lvl4": "",
    "lvl5": "",
    "lvl6": ""
  }}
]


