
[{{- range $index, $page := .Site.Pages -}}
  {{- if ne $page.Type "json" -}}
      {{- range $index, $html :=  findRE "<h2(.|\n)*?</h2>" $page.Content -}}  
      {{- $html_id := findRE "id=(.|\n)*?::" . -}} 
      {{ $html_id_f := delimit $html_id "" ""}}
        {{ $content := . | plainify }}
        {      
          "objectID": "{{ $html_id_f | plainify  }}",
          "url": "{{ $page.Permalink }}#{{ $content }}",
          "title": "{{ htmlEscape $page.Title}}",
          "content": {{ $content | jsonify }},
          "hierarchy": { 
            "lvl0": "{{ htmlEscape $page.Parent.Title }}",
            "lvl1": "{{ htmlEscape $page.Title}}",
            "lvl2": {{ $content | jsonify }},
            "lvl3": "",
            "lvl4": "",
            "lvl5": "",
            "lvl6": ""
          }
        },    
      {{- end -}}
  {{- end -}}
{{- end -}}
  {
    "objectID": "{{ md5 "null" }}",
    "url": "",
    "title": "null",
    "content": "null",
    "hierarchy": { 
      "lvl0": "null",
      "lvl1": "",
      "lvl2": "",
      "lvl3": "",
      "lvl4": "",
      "lvl5": "",
      "lvl6": ""
    }
  }
]


