
[{{ range $index, $page := .Site.Pages }}
  {{- if ne $page.Type "json" -}}
    {{- if and $index (gt $index 0) -}},
    {{- end }}
  {
    "objectID": "{{ .UniqueID }}",
    "url": "{{ $page.Permalink }}",
    "title": "{{ htmlEscape $page.Title}}",
    "content": {{ $page.Plain | jsonify }},
    "hierarchy": { 
      "lvl0": "{{ htmlEscape $page.Title}}",
      "lvl1": "null",
      "lvl2": "null",
      "lvl3": "null",
      "lvl4": "null",
      "lvl5": "null",
      "lvl6": "null"
    }
  }
  {{- end -}}
{{- end -}}]

